# ==================================================
# Acelo Staging Environment Configuration
# ==================================================
# 
# This file contains staging-specific environment variables.
# Copy this file to .env.staging for your staging deployment.

# ----------------------------------------------
# Environment Identification
# ----------------------------------------------
NODE_ENV=production
VITE_APP_ENV=staging
VITE_APP_VERSION=1.0.0-beta.1

# ----------------------------------------------
# Supabase Configuration (Staging)
# ----------------------------------------------
VITE_SUPABASE_URL=https://your-staging-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-staging-anon-key

# ----------------------------------------------
# Application URLs (Staging)
# ----------------------------------------------
VITE_APP_URL=https://staging.acelo.ai

# ----------------------------------------------
# AI Integration (Staging)
# ----------------------------------------------
# Use staging-specific OpenAI key in Supabase secrets
# supabase secrets set OPENAI_API_KEY=sk-staging-key-here --project-ref your-staging-project
VITE_DEFAULT_AI_MODEL=gpt-4
VITE_AI_MAX_TOKENS=2000
VITE_AI_TEMPERATURE=0.7

# ----------------------------------------------
# Authentication & Security (Staging)
# ----------------------------------------------
VITE_SESSION_TIMEOUT=3600
VITE_ENABLE_2FA=true

# ----------------------------------------------
# Monitoring & Analytics (Staging)
# ----------------------------------------------
# Enable monitoring but limited analytics in staging
VITE_SENTRY_DSN=your-staging-sentry-dsn
VITE_SENTRY_ENVIRONMENT=staging

# Disable production analytics in staging
# VITE_GOOGLE_ANALYTICS_ID=
# VITE_POSTHOG_KEY=
# VITE_MIXPANEL_TOKEN=

# Performance monitoring (reduced sampling)
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.5

# ----------------------------------------------
# Email & Communication (Staging)
# ----------------------------------------------
FROM_EMAIL=staging@acelo.ai

# ----------------------------------------------
# Development & Testing (Staging)
# ----------------------------------------------
# Disable dev tools in staging
VITE_DEBUG_MODE=false
VITE_ENABLE_QUERY_DEVTOOLS=false
VITE_ENABLE_REDUX_DEVTOOLS=false

# Test configuration
VITE_ENABLE_MSW=false
VITE_TEST_API_DELAY=0

# Feature flags
VITE_ENABLE_BETA_FEATURES=true
VITE_ENABLE_EXPERIMENTAL_UI=true

# ----------------------------------------------
# Performance & Optimization (Staging)
# ----------------------------------------------
ANALYZE_BUNDLE=false
VITE_ENABLE_SW=true
VITE_SW_CACHE_STRATEGY=stale-while-revalidate
VITE_PRELOAD_ROUTES=true
VITE_PREFETCH_ASSETS=true

# ----------------------------------------------
# Compliance & Legal (Staging)
# ----------------------------------------------
VITE_ENABLE_COOKIE_CONSENT=true
VITE_PRIVACY_POLICY_URL=https://staging.acelo.ai/privacy
VITE_TERMS_OF_SERVICE_URL=https://staging.acelo.ai/terms

# Data retention (shorter for staging)
USER_DATA_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30
ANALYTICS_RETENTION_DAYS=30
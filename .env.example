# ==================================================
# Acelo Environment Configuration
# ==================================================
# 
# This file contains all environment variables needed for Acelo.
# Copy this file to .env and fill in your actual values.
#
# SECURITY WARNING: Never commit .env files to version control!
# Keep sensitive values secure and use environment-specific files.

# ----------------------------------------------
# Supabase Configuration
# ----------------------------------------------
# Get these values from your Supabase project dashboard
# Project Settings > API > Project URL and API Keys
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Key - ONLY for local development
# NEVER expose this key in client-side code or commit to git
# In production, this should only be used in Supabase Edge Functions
# VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ----------------------------------------------
# Application Configuration
# ----------------------------------------------
# Environment: development | staging | production
NODE_ENV=development

# Application version (auto-populated from package.json in production)
VITE_APP_VERSION=1.0.0-beta.1

# Application URL - adjust for each environment
# Development:  http://localhost:5173
# Staging:      https://staging.acelo.ai
# Production:   https://acelo.ai
VITE_APP_URL=http://localhost:5173

# Application environment identifier
VITE_APP_ENV=development

# ----------------------------------------------
# AI Integration
# ----------------------------------------------
# OpenAI API Key - SECURITY CRITICAL!
# 
# LOCAL DEVELOPMENT:
#   - Uncomment the line below and add your key for local testing
#   - Ensure .env is in .gitignore
# 
# PRODUCTION/STAGING:
#   - Add as Supabase secret: supabase secrets set OPENAI_API_KEY=your_key
#   - Access only through Edge Functions, never client-side
#   - Use environment-specific API keys
#
# VITE_OPENAI_API_KEY=your-openai-api-key-here

# AI Model Configuration
VITE_DEFAULT_AI_MODEL=gpt-4
VITE_AI_MAX_TOKENS=2000
VITE_AI_TEMPERATURE=0.7

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
# Database connection pooling (for Edge Functions)
# SUPABASE_DB_URL=postgresql://user:pass@host:port/db

# Enable database query logging in development
VITE_ENABLE_DB_LOGGING=true

# ----------------------------------------------
# Authentication & Security
# ----------------------------------------------
# JWT Secret for custom auth (if not using Supabase Auth)
# JWT_SECRET=your-super-secure-jwt-secret-here

# Session configuration
VITE_SESSION_TIMEOUT=3600
VITE_ENABLE_2FA=false

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ----------------------------------------------
# Monitoring & Analytics
# ----------------------------------------------
# Error tracking and monitoring
# VITE_SENTRY_DSN=your-sentry-dsn-here
# VITE_SENTRY_ENVIRONMENT=development

# Analytics platform configuration
# VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# VITE_POSTHOG_KEY=your-posthog-key-here
# VITE_MIXPANEL_TOKEN=your-mixpanel-token-here

# Performance monitoring
# VITE_ENABLE_PERFORMANCE_MONITORING=true
# VITE_PERFORMANCE_SAMPLE_RATE=0.1

# ----------------------------------------------
# Email & Communication
# ----------------------------------------------
# Email service configuration (for Edge Functions)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password
# FROM_EMAIL=noreply@acelo.ai

# Notification services
# SLACK_WEBHOOK_URL=your-slack-webhook-url
# DISCORD_WEBHOOK_URL=your-discord-webhook-url

# ----------------------------------------------
# Storage & CDN
# ----------------------------------------------
# External storage configuration
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=acelo-assets

# CDN configuration
# CDN_URL=https://cdn.acelo.ai
# VITE_ASSETS_BASE_URL=https://cdn.acelo.ai/assets

# ----------------------------------------------
# Development & Testing
# ----------------------------------------------
# Enable detailed error logging in development
VITE_DEBUG_MODE=true

# Enable React Query Devtools
VITE_ENABLE_QUERY_DEVTOOLS=true

# Enable Redux DevTools (if using Redux)
VITE_ENABLE_REDUX_DEVTOOLS=true

# Test configuration
VITE_ENABLE_MSW=true
VITE_TEST_API_DELAY=100

# Feature flags for development
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_EXPERIMENTAL_UI=false

# Database seeding (development only)
ENABLE_DB_SEEDING=true
SEED_USER_COUNT=10

# ----------------------------------------------
# Performance & Optimization
# ----------------------------------------------
# Bundle analysis and optimization
ANALYZE_BUNDLE=false

# Service Worker configuration
VITE_ENABLE_SW=false
VITE_SW_CACHE_STRATEGY=stale-while-revalidate

# Preload configuration
VITE_PRELOAD_ROUTES=true
VITE_PREFETCH_ASSETS=true

# ----------------------------------------------
# API Rate Limiting
# ----------------------------------------------
# Rate limiting configuration (for Edge Functions)
# RATE_LIMIT_WINDOW=900000  # 15 minutes in ms
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_ENABLE=true

# ----------------------------------------------
# Compliance & Legal
# ----------------------------------------------
# GDPR and privacy configuration
VITE_ENABLE_COOKIE_CONSENT=true
VITE_PRIVACY_POLICY_URL=https://acelo.ai/privacy
VITE_TERMS_OF_SERVICE_URL=https://acelo.ai/terms

# Data retention policies (in days)
USER_DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=90
ANALYTICS_RETENTION_DAYS=180

# ----------------------------------------------
# Environment-Specific Notes
# ----------------------------------------------
#
# DEVELOPMENT:
#   - Use .env.local for local overrides
#   - Enable all debugging features
#   - Use test API keys where possible
#
# STAGING:
#   - Use .env.staging
#   - Mirror production configuration
#   - Enable monitoring but not analytics
#   - Use staging-specific API keys
#
# PRODUCTION:
#   - Use .env.production
#   - Disable all debugging features
#   - Enable full monitoring and analytics
#   - Use production API keys only
#   - Set appropriate cache headers
#   - Enable security headers
#
# For more information, see:
# - docs/DEPLOYMENT.md
# - docs/DEVELOPMENT.md
# - docs/SECURITY.md